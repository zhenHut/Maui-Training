<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FocusUnit.MainPage"
             Title="Focus Unit">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="14">
            <Label Text="Aufgabe"
                   FontSize="18" />
            <Entry Placeholder="Titel (min. 3 Zeichen)"
                   Text="{Binding Title}" 
                   BackgroundColor="{Binding IsTitleValid,Converter={StaticResource BoolToColorConverter}}"/>
            
            <Label Text="Fehler: Titel muss mindestens 3 Zeichen haben" 
                   IsVisible="{Binding IsTitleValid, Converter={StaticResource InverseBoolConverter}}"
                   FontSize="12"/>

            <Label Text="Priorität"
                   FontSize="18" />
            <Picker ItemsSource="{Binding PriorityOptions}"
                    SelectedItem="{Binding SelectedPriority}"
                    ItemDisplayBinding="{Binding .,Converter={StaticResource PriorityToDisplayConverter}}"/>

            <Label Text="Fällig am"
                   FontSize="18" />

            <DatePicker Date="{Binding DueDate, Mode=TwoWay} "
                        BackgroundColor="{Binding IsDateValid, Converter={StaticResource BoolToColorConverter}}" />
            
            <Label Text="Datum darf nicht in der Vergangenheit liegen"
                   IsVisible="{Binding IsDateValid, Converter={StaticResource InverseBoolConverter}}"
                   FontSize="16"/>

            <Label Text="Titel ist zu kurz oder Datum liegt in der Vergangenheit."
                   IsVisible="{Binding IsValid, Converter={StaticResource InverseBoolConverter}}"
                   FontSize="12"
                   Opacity="0.7" TextColor="Red"
                   Margin="0,10"/>
            <HorizontalStackLayout Spacing="12"
                                   Margin="0,10,0,0">
                <Button Text="Speichern"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding IsValid}" />
                <Button Text="Zurücksetzen"
                        Command="{Binding ResetCommand}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
